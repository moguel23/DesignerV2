<% provide :title, @customer.name %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1><%= @customer.name %></h1>
      Customer Code: <%= @customer.code %>
    </section>
  </aside>
  <div class="col-md-8">
    SITES:
    <%= link_to "Create New Site", new_site_path(:customer => @customer.id) %>
    <ol class="sites">
      <%= render @customer.sites %>
    </ol>
  </div>
  <div class="col-md-8">
    PRODUCTS:
    <%= link_to "Create New Product", new_product_path(:customer => @customer.id) %>
    <ol class="products">
      <%= @customer.products.each do |product| %>

          <%= render product %>
          DEVICES:
          <ul>
            <%= render product.devices %>
          </ul>
      <% end %>


    </ol>
  </div>
</div>
